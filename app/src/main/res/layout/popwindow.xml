<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/commentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Comments"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:text="Comments" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:baselineAligned="false" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp">
            <!--Scrollable content here-->
            <LinearLayout
                android:id="@+id/cfeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/comment1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="Your Name, 0 mins"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ych1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Comment Here"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15sp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="Your Name, 0 mins"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ych2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Comment Here"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15sp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="Your Name, 0 mins"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ych3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Comment Here"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15sp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="Your Name, 0 mins"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ych4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Comment Here"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15sp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="Your Name, 0 mins"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/ych5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Comment Here"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15sp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/yourcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Write a comment..."
            android:inputType="textNoSuggestions"
            android:text=""
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <ImageButton
            android:id="@+id/writecomment"
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:background="@drawable/outline_create_black_18dp"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/commentFooter"
        android:background="#FFFFFF" />

</RelativeLayout>